---
const nav = [
  { href: "/security", label: "Security" },
  { href: "/architecture", label: "Architecture" },
  { href: "/ai-adapters", label: "AI Adapters" },
  { href: "/downloads", label: "Downloads" },
  { href: "/community", label: "Community" },
  { href: "/pricing", label: "Pricing" },
];
---
<header style="position:sticky; top:0; z-index:50; backdrop-filter: blur(10px); background: rgba(11,16,32,.70); border-bottom: 1px solid rgba(255,255,255,.10);">
  <div class="container" style="display:flex; align-items:center; justify-content:space-between; padding: 14px 0;">
    <a href="/" style="display:flex; align-items:center; gap:12px; font-weight:900; letter-spacing:.3px;">
      <span style="font-size:20px; font-weight:900; letter-spacing:.3px;">
        <span style="color:#fff;">Open</span><span style="color:var(--brand);">NVR</span>
      </span>
      <span class="badge">open-source • offline-first • sovereign-ai</span>
    </a>

    <nav style="display:flex; gap:14px; flex-wrap:wrap; justify-content:flex-end;">
      {nav.map((n) => (
        <a href={n.href} style="color: var(--muted); font-weight:600; font-size:14px;">
          {n.label}
        </a>
      ))}
      <a class="btn primary" href="https://github.com/open-nvr" target="_blank" rel="noopener">
        GitHub
      </a>
    </nav>
  </div>
</header>


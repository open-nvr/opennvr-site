---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
---
<BaseLayout title="Contact" description="Get in touch for pilots, enterprise pricing, or security assessments.">
  <Section title="Contact" subtitle="For pilots, enterprise deployments, and security assessments.">
    <div class="grid" style="grid-template-columns: 1fr; max-width: 760px;">
      <div class="card" style="padding:16px;">
        <p style="margin:0 0 10px; color:var(--muted); line-height:1.6;">
          Replace these with your real channels when ready.
        </p>
        <ul style="margin:0; padding-left:18px; color:var(--muted); line-height:1.9;">
          <li>Email: <a href="mailto:hello@opennvr.org">hello@opennvr.org</a></li>
          <li>Docs: <a href="https://docs.opennvr.org" target="_blank" rel="noopener">docs.opennvr.org</a></li>
          <li>GitHub: <a href="https://github.com/your-org/opennvr" target="_blank" rel="noopener">github.com/your-org/opennvr</a></li>
        </ul>
      </div>
    </div>
  </Section>
</BaseLayout>

